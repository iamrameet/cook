// Hello World in Cook language

// Print a simple greeting
taste "Hello, Chef!";

// Define an ingredient (variable)
ingredient name = "World";

// Print with the ingredient
taste "Hello, " + name + "!";

// Define a recipe (function)
recipe greet(person) {
    taste "Greetings, " + person + "!";
}

// Cook (call) the recipe
cook greet(name);

// Math operations
ingredient a = 5;
ingredient b = 7;
taste a + b;
taste a * b;
